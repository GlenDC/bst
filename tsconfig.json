{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES6"
  },
  "include": [
    "lib/**/*.ts",
    "test/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
