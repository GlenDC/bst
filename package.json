{
  "name": "bespoken-tools",
  "license": "MIT",
  "private": false,
  "version": "0.4.10",
  "bin": {
    "bst": "./bin/bst.js",
    "bst-server": "./bin/bst-server.js"
  },
  "dependencies": {
    "typescript": "^1.8.10",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.11",
    "istanbul": "^0.4.4",
    "mocha": "2.5.3",
    "mocha-lcov-reporter": "^1.2.0",
    "remap-istanbul": "^0.6.4",
    "tslint": "^3.13.0",
    "typemoq": "^0.2.0"
  },
  "engines": {
    "node": "4.4.7"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bespoken/bst.git"
  },
  "scripts": {
    "postversion": "git push && git push --tags",
    "pretest": "tsc",
    "coverage": "tsc && istanbul --include-all-sources cover _mocha test/**/*-test.js -- -R spec && remap-istanbul -i ./coverage/coverage.json -o ./coverage/ts-report -t html && ./node_modules/.bin/remap-istanbul -i coverage/coverage.json -t lcovonly > coverage/lcov-ts.info",
    "coveralls": "npm run coverage && coveralls < coverage/lcov-ts.info",
    "test": "mocha test/**/*-test.js"
  }
}
